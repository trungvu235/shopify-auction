<div id="root">
    {% liquid
        render 'vite-tag' with 'theme.css'
        render 'vite-tag' with 'theme.jsx'
    %}
</div>

<script>
    const home = {{ request.path | json }}
        window.shopifyCustomer = {
            id:   "{{ customer.id}}",
            name: "{{ customer.name }}",
            email: "{{ customer.email }}"
        }
    window.shop = {
        name: "{{ shop.name }}",
        domain: "{{ shop.domain }}",
    }
</script>
<style>
    button[id='major-popup-button'] {
        position: fixed;
        bottom: 15px;
        right: 15px;
        width: 80px;
        height: 80px;
        border-radius: 50%;
        border: 2px solid hsl(0, 100%, 50%);
        padding: 0;
        font: inherit;
        cursor: pointer;
        outline: inherit;
        z-index: 100;
        transition: transform 0.3s cubic-bezier(0.075, 0.82, 0.165, 1);
        background: url("{{ 'new-auction.png' | asset_img_url: '56x56' }}") no-repeat center
    }
    div[id='major-popup-parent'] {
        position: fixed;
        z-index: 100;
        display: none;
        overflow: auto;
        bottom: 110px;
        right: 15px;
        width: 360px;
        height: 640px;
        background: #efefef;
        border-radius: 5px;
        border: solid 1px chocolate;
    }
    div[id='top-major-content'] {
        position: sticky;
        top: 0;
        height: 20%;
        width: 100%;
        background: linear-gradient(90deg, rgba(1,0,8,1) 0%, rgba(33,33,161,1) 50%, rgba(10,230,222,1) 100%);
        border-top-left-radius: 5px;
        border-top-right-radius: 5px;
        z-index: 10
    }
    button[id='close-popup'] {
        position: relative;
        font-size: 20px;
        text-align: center;
        height: 32px;
        width: 32px;
        border: none;
        background: transparent;
        border-radius: 5px;
        color: aliceblue;
        cursor: pointer;
    }
    button[id='close-popup']:hover {
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24),0 17px 50px 0 rgba(0,0,0,0.19);
    }
    p[class='common-text'] {
        font-size: 15px;
        color: #efefef;
    }
    p[class='overflow-text'] {
        font-size: 15px;
        color: #efefef;
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
    }
    div[id='major-content'] {
        height: 70%;
    }
    div[id='footer-major-content'] {
        position: sticky;
        bottom: 0;
        width: 100%;
        height: 10%;
        background-color: #ffffff;
        border-bottom-left-radius: 5px;
        border-bottom-right-radius: 5px;
        z-index: 10;
    }
    div[id='footer-banner'] {
        top: 50%;
        left: 50%;
        position: absolute;
        transform: translate(-50%, -50%);
        width: 70%;
    }
    div[id='main-content'] {
        position: relative;
        border-radius: 10px;
        background-color: #ffffff;
        height: 200px;
        width: 90%;
        margin-top: 10px;
        margin-right: 5%;
        margin-left: 5%;
    }
    div[class='card-content'] {
        top: 30%;
        left: 50%;
        position: absolute;
        transform: translate(-50%, -50%);
        width: 80%;
    }
    button[id='register-button'] {
        position: absolute;
        background-color: cornflowerblue;
        width: 100px;
        height:50px;
        border-radius: 7px;
        color:aliceblue;
        text-align:center;
        cursor: pointer;
        border: none;
    }
</style>
